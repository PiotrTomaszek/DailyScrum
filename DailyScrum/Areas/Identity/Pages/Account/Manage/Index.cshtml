@page "/konto"
@model IndexModel
@{
    ViewData["Title"] = "Twój Profil";
    ViewData["ActivePage"] = ManageNavPages.Index;
    Layout = "~/Views/Shared/_Layout.cshtml";
    //Layout = "_Layout";
}


@using Microsoft.AspNetCore.Identity
@using DailyScrum.Areas.Identity.Data

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    var userPhoto = UserManager.GetUserAsync(User).Result?.PhotoPath;

    if (userPhoto == null)
    {
        userPhoto = "no-avatar.jpg";
    }
}

<partial name="_StatusMessage" model="Model.StatusMessage" />

<div class="row">
    <div class="col-md-3 offset-md-1 pb-3">
        <partial name="_ManageNav">
    </div>
    <div class="col-md-7 daily-background-color text-white  p-5 pb-5 mb-5">
        <form id="profile-form" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row">
                <div class="@*offset-2 col-6*@ text-center w-100 @*pb-2*@">
                    <button class=" bg-transparent btn">
                        <img src="@Url.Content("~/avatars/" + @userPhoto)" class="rounded-circle @*border border-dark*@" style="height:126px;width:126px" />
                    </button>
                </div>
            </div>

            @* <i class="far fa-envelope"></i> *@

            @*<input hidden id="file" name="file" />
                <div class="dropzone dropzone-file-area" id="fileUpload">
                    <div class="dz-default dz-message text-dark">
                        <h3 class="sbold">Twoje zdjęcie.</h3>
                        <span>Przeciągnij albo naciśnij i wybierz plik z dysku.</span>
                    </div>
                </div>*@

            <div class="form-group">
                <label asp-for="Input.FirstName"></label>
                <input asp-for="Input.FirstName" class="form-control" />
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="Input.LastName"></label>
                <input asp-for="Input.LastName" class="form-control" />
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.PhoneNumber"></label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>

            <button id="update-profile-button" type="submit" class="btn  btn-primary">Zapisz dane!</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    @* dropzone *@
    <script src="~/lib/dropzone/dist/min/dropzone.min.js"></script>
    <link href="~/lib/dropzone/dist/min/dropzone.min.css" rel="stylesheet" />

    <script>
        Dropzone.options.fileUpload = {
            url: 'home/uploadfile',
            paramName: "file",
            autoProcessQueue: true,
            maxFilesize: 4,
            resizedWidth: 512,
            addRemoveLinks: true,
            maxFiles: 1,
            acceptedFiles: "image/jpeg,image/png,image/gif",
            init: function () {
                var submitButton = document.querySelector("#submit-all");
                var wrapperThis = this;

                submitButton.addEventListener("click", function () {
                    wrapperThis.processQueue();
                });

                this.on('sendingmultiple', function (data, xhr, formData) {
                    formData.append("sth", $("#submit-all").val());
                });
            }
        }
    </script>



}