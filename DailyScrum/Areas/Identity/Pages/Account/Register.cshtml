@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="card-header">
    <h3 class="center text-white">Rejestracja</h3>
</div>

<div class="card-body">
    <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="mb-2 mr-sm-2 p-2">
            <div class="input-group ">
                <div class="input-group-prepend">
                    <div class="input-group-text"><i class="fas fa-mail-bulk"></i></div>
                </div>
                <input asp-for="Input.Email" class="form-control" placeholder="Email" />
            </div>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

        <div class="mb-2 mr-sm-2 p-2">
            <div class="input-group ">
                <div class="input-group-prepend">
                    <div class="input-group-text"><i class="fas fa-key"></i></div>
                </div>
                <input asp-for="Input.Password" class="form-control" placeholder="Hasło" />
            </div>
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>

        <div class="mb-2 mr-sm-2 p-2">
            <div class="input-group ">
                <div class="input-group-prepend">
                    <div class="input-group-text"><i class="fas fa-lock"></i></div>
                </div>
                <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Powtórz Hasło" />
            </div>
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>

        <hr />

        <div class="form-group">
            <button type="submit" class="btn btn-lg text-white btn-outline-primary">Zarejestruj się</button>
        </div>

        <div class="form-group ">
            <p>
                <a class="link-light text-white" asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Powrót</a>
            </p>
        </div>
    </form>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
