@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = "/Areas/Identity/Pages/_IdentityLayout.cshtml";
}

<div class="card-header">
    <h3 class="center text-white">Logowanie</h3>
</div>

<div class="card-body">
    <form id="account" method="post">
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="mb-2 mr-sm-2">
            <div class="input-group ">
                <div class="input-group-prepend">
                    <div class="input-group-text"><i class="fas fa-user"></i></div>
                </div>
                <input asp-for="Input.Email" class="form-control" placeholder="Email" />
            </div>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

        <div class="mb-2 mr-sm-2">
            <div class="input-group ">
                <div class="input-group-prepend">
                    <div class="input-group-text"><i class="fas fa-key"></i></div>
                </div>
                <input asp-for="Input.Password" class="form-control" placeholder="Hasło" />
            </div>
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>

        <div class="form-group">
            <div class="checkbox">
                <label asp-for="Input.RememberMe">
                    <input asp-for="Input.RememberMe" />
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-lg text-white btn-outline-primary">Zaloguj się</button>
        </div>
        <div class="form-group ">
            <p>
                <a class="link-light text-white" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Zarejestruj się</a>
            </p>
        </div>
    </form>

</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />

}
