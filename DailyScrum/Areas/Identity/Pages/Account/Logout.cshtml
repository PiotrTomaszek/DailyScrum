@page

@model LogoutModel
@{
    ViewData["Title"] = "Wylogowanko";
    Layout = "/Areas/Identity/Pages/_IdentityLayout.cshtml";
}

<META HTTP-EQUIV="Refresh" CONTENT="3;URL=@(Url.Page("/Login"))">

<header>
    <h1>Wylogowano</h1>
    @{
        if (User.Identity.IsAuthenticated)
        {
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/")" method="post">
                <button type="submit" class="nav-link btn btn-link text-dark">Click here to Logout</button>
            </form>
        }
        else
        {
            <hr>
            <p>Pomyślnie wylogowano ze strony.</p>
        }
    }
</header>