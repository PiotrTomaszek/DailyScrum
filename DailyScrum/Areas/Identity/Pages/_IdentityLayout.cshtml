<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DailyScrum</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="myBackgroundImage @*identityBody*@">
    <div class="container">
        <main role="main" class="pb-3">
            <div class="row  m-5 pt-5">
                <div class="container  text-center">
                    <div class="d-flex justify-content-center h-100 text-light ">
                        <div class="card myCard daily-background-color pt-5 p-5">
                            @RenderBody()
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <footer class="border-top footer text-muted daily-background-color">
        <div class="container text-center text-white-50">
            &copy; 2021 - DailyScrum
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <link href="~/lib/fontawesome/css/all.min.css" rel="stylesheet" />
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>