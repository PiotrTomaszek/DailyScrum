@model IEnumerable<DailyScrum.Models.Database.DailyMeeting>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="pl-4 pr-4 text-center bg-white rounded">Archiwum spotkań</h1>

<table class="table text-center p-2 mb-5 pb-5 ">
    <thead class="text-white daily-background-color pl-4 pr-4">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HasFinished)
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody class=" bg-white ">
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HasFinished)
                </td>

                <td class="text-right">
                    <form asp-action="Details" method="get">
                        <input type="hidden" name="id" value="@item.DailyMeetingId" />
                        <button type="submit" class="btn btn-outline-info">
                            Pokaż posty zespołu
                        </button>
                    </form>
                </td>

            </tr>
        }
    </tbody>
</table>
