@using Microsoft.AspNetCore.Identity
@using DailyScrum.Areas.Identity.Data

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    var userPhoto = UserManager.GetUserAsync(User).Result.PhotoPath;
}

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item dropdown">
            <a href="#" data-toggle="dropdown" class="nav-item nav-link dropdown-toggle user-action">
                @if (userPhoto != null)
                {
                    <img src="~/avatars/@userPhoto" class="rounded-circle user-image-navbar" alt="Avatar">
                }
                else
                {
                    <i class="fa fa-user align-baseline"></i>
                }
                @UserManager.GetUserName(User) <b class="caret"></b>
            </a>
            <div class="dropdown-menu">
                <a asp-area="Identity" asp-page="/Account/Manage" asp-route-returnUrl="@Url.Action("UserAccountManage","Home")" class="dropdown-item text-center"><i class="fa fa-user align-baseline"></i>  Profil</a>

                <div class="divider dropdown-divider"></div>

                <div class="dropdown-item">
                    <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("UserLogout","Home")">
                        <button id="logout" type="submit" class="btn btn-outline-danger btn-block text-dark "><i class="fas fa-lock"></i> Wyloguj</button>
                    </form>
                </div>
            </div>
        </li>

        @*<li class="nav-item">
                <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
            </li>
            <li class="nav-item">
                <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("UserLogout","Home")">
                    <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
                </form>
            </li>*@
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>


